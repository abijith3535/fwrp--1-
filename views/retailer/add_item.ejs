    <%- include('../partials/scripts') %>
    

     <script type="text/javascript" src="/retailer/files/bower_components/switchery/js/switchery.min.js"></script>
     <!-- Chartlist charts -->

     <script type="text/javascript" src="/retailer/files/assets/pages/advance-elements/swithces.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
     <!-- Custom js -->
     
     <script src="/retailer/files/assets/js/pcoded.min.js"></script>
     <script src="/retailer/files/assets/js/vertical/vertical-layout.min.js"></script>
 
     <script type="text/javascript" src="/retailer/files/assets/js/script.min.js"></script>
     <script>
        $(document).ready(function(){
            $('#name').change(function(){
                var name = $(this).val();
                if(name!='')
                {
                    var slug = generateSlug(name);
                    $('#slug').val(slug);
                }
            })
            $("#expiration_date").datepicker({ 
                    autoclose: true, 
                    todayHighlight: true,
                     format: 'yyyy-mm-dd'
            }).datepicker('update', new Date());
        })
        function generateSlug(productName) {
                var slug = productName.toLowerCase();
                slug = slug.replace(/[^a-z0-9\s-]/g, '');
                slug = slug.replace(/\s+/g, '-');
                slug = slug.replace(/^-+|-+$/g, '');

                return slug;
            }
     </script>
     <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault(); // Prevent the default form submission
                const formData = new FormData(this);
                formData.append('is_available_for_sale',  $('#is_available_for_sale').is(':checked'));
                formData.append('is_donated',  $('#is_donated').is(':checked'));
                formData.append('send_noti',  $('#send_noti').is(':checked'));
                
               
                // Submit the form data using AJAX
                $.ajax({
                    url: '<%= siteName %>/retailer/fooditems/submit_items', // Endpoint in your Express app
                    type: 'POST',
                    data: formData,
                    processData: false, 
                    contentType: false, 
                    success: function (response) {
                       // var response = JSON.parse(response.responseText);
                       alertify.success(response.message);
                       $("#item_form").trigger("reset");
                    },
                    error: function (error) {
                        
                        var errors_ = JSON.parse(error.responseText);
                        console.log(errors_);
                        $.each(errors_.errors, function(index, e) {
                            alertify.error(e);
                        });
                    }
                });
            });
        });
  
    </script>
</body>

</html>