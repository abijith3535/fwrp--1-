<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/retailer/files/bower_components/chartist/css/chartist.css" type="text/css" media="all">
  <link rel="stylesheet" type="text/css" href="/retailer/files/bower_components/switchery/css/switchery.min.css">
   <!-- Date-Dropper css -->
   <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" >
   <!-- Select 2 css -->
   <link rel="stylesheet" href="/retailer/files/bower_components/select2/css/select2.min.css" />
   <link rel="stylesheet" type="text/css" href="/retailer/files/bower_components/bootstrap-multiselect/css/bootstrap-multiselect.css" />
    <link rel="stylesheet" type="text/css" href="/retailer/files/bower_components/multiselect/css/multi-select.css" />
</head>

<body>
     <!-- [ Pre-loader ] start -->
     
    <!-- [ Pre-loader ] end -->
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <!-- [ Header ] start -->
            <%- include('../partials/topnav') %>
            <!-- [ chat user list ] start -->
            
            <!-- [ chat user list ] end -->

            <!-- [ chat message ] start -->
            
            <!-- [ chat message ] end -->


            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <!-- [ navigation menu ] start -->
                    <%- include('../partials/sidebar') %>
                    <!-- [ navigation menu ] end -->
                    <div class="pcoded-content">
                        <div class="page-header card">
                            <div class="row align-items-end">
                                <div class="col-lg-8">
                                    <div class="page-header-title">
                                        <i class="fa fa-user bg-c-blue"></i>
                                        <div class="d-inline">
                                            <h5>Profile</h5>
                                            <span>Update your details here</span>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                        <!-- [ breadcrumb ] end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <!-- [ page content ] start -->
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>Update</h5>
                                                        <div class="card-header-right">
                                                            <ul class="list-unstyled card-option">
                                                                <li class="first-opt"><i class="feather icon-chevron-left open-card-option"></i></li>
                                                                <li><i class="feather icon-maximize full-card"></i></li>
                                                                <li><i class="feather icon-minus minimize-card"></i></li>
                                                                <li><i class="feather icon-refresh-cw reload-card"></i></li>
                                                                <li><i class="feather icon-trash close-card"></i></li>                                                                 <li><i class="feather icon-chevron-left open-card-option"></i></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="card-block">
                                                        <form id="profileForm">
                                                            <div class="row mb-3">
                                                                <label class="form-label col-sm-2 col-form-label">Name</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control"
                                                                    placeholder="Type your  name" id="name" name="name" value="<%=userData.name%>">
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <label class="form-label col-sm-2 col-form-label">Email</label>
                                                                <div class="col-sm-10">
                                                                    <input type="email" class="form-control"
                                                                    placeholder="Type your email" id="email" name="email" value="<%=userData.email%>">
                                                                </div>
                                                            </div>
                                                            <div class="mb-3 row">
                                                                <label class="form-label col-sm-2 col-form-label">Password</label>
                                                                <div class="col-sm-10">
                                                                    <input type="password" placeholder="Password" name="password" class="form-control" id="password">
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <label class="form-label col-sm-2 col-form-label">Confirm password</label>
                                                                <div class="col-sm-10">
                                                                    <input type="password" class="form-control"
                                                                    placeholder="Confirm password" id="confirm_password" name="confirm_password">
                                                                </div>
                                                            </div>
                                                           
                                                            
                                                            <div class="row mb-3">
                                                                <label class="form-label col-sm-2 col-form-label">Image</label>
                                                                
                                                                <div class="col-sm-10">
                                                                    <input type="hidden" id="oldLogo" name="oldLogo" value="<%=userData.logo%>">
                                                                    <input type="file" name="logo" class="form-control" id="logo">
                                                                    <img src="<%= siteName %>/uploads/<%=userData.logo%>" id="logoView" style="width:100px">
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <label class="form-label col-sm-2 col-form-label">Serviceable Postalcodes</label>
                                                                <div class="col-sm-10">
                                                                <select class="form-select js-example-basic-hide-search col-sm-12" id="pincodes" multiple="multiple" style="width: 75%">
                                                                    <optgroup label="Postal Codes">
                                                                        <% if ((Array.isArray(pcObj) && pcObj.length > 0)){ 
                                                                            <!-- includes(browserUrl) -->
                                                                            %>
                                                                            <% pcObj.forEach((o, index) => { %>
                                                                           <% if(serviceable && serviceable.includes(o.postal_code)){%>
                                                                                <option selected  value="<%=o.postal_code%>"><%=o.postal_code%></option>
                                                                            <%}else{%>
                                                                                <option  value="<%=o.postal_code%>"><%=o.postal_code%></option>
                                                                            <% } %>
                                                                        <% }) %>
                                                                        <% } %>
                                                                        
                                                                    </optgroup>
                                                                </select>
                                                            </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                               
                                                                <div class="col-sm-12 text-end" >
                                                                    <button class="btn btn-primary waves-effect waves-light " type="submit">Submit</button>
                                                                </div>
                                                            </div>

                                                            
                                                            </form>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- [ page content ] end -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ style Customizer ] start -->
                    <div id="styleSelector">
                    </div>
                    <!-- [ style Customizer ] end -->
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    

     <script type="text/javascript" src="/retailer/files/bower_components/switchery/js/switchery.min.js"></script>
     <!-- Chartlist charts -->

     <script type="text/javascript" src="/retailer/files/assets/pages/advance-elements/swithces.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
     <!-- Custom js -->
     
     <script src="/retailer/files/assets/js/pcoded.min.js"></script>
     <script src="/retailer/files/assets/js/vertical/vertical-layout.min.js"></script>
 
     <script type="text/javascript" src="/retailer/files/assets/js/script.min.js"></script>

     <!-- Select 2 js -->
     <script type="text/javascript" src="/retailer/files/bower_components/select2/js/select2.full.min.js"></script>
     <script type="text/javascript" src="/retailer/files/bower_components/bootstrap-multiselect/js/bootstrap-multiselect.js">
    </script>
     <script>
        $(document).ready(function () {
           
            $("#pincodes").select2() ;
            $('#profileForm').on('submit', function (e) {
                e.preventDefault(); // Prevent the default form submission
                const formData = $(this).serializeArray();
                const select2Value = $('#pincodes').val();  // You can replace '.select2' with the specific selector

               
                formData.push({
                name: 'pincodes', 
                value: select2Value
                });
                console.log(formData);
                $.ajax({
                    url: '<%= siteName %>/retailer/edit_profile', // Endpoint in your Express app
                    type: 'POST',
                    data: formData,
                     success: function (response) {
                       if(response.message=='success')
                       {
                         alertify.success(response.message);
                         
                       }
                       else alertify.error('Something went wrong!');
                       
                     },
                    error: function (error) {
                        
                        var errors_ = JSON.parse(error.responseText);
                        console.log(errors_);
                        $.each(errors_.errors, function(index, e) {
                            alertify.error(e);
                        });
                    }
                });
            });
        });
  
    </script>
</body>

</html>